{
  "compilerOptions": {
    "module": "es6",
    "allowJs": true,
    "declaration": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution":"node",
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers":true,
    "sourceMap": true,
    "lib": ["DOM", "ES6", "ES2016", "ES2017", "DOM.Iterable", "ScriptHost"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "node_modules"
  ]
}
